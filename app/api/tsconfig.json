{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@schema/*": ["../schema/*"],
    }
  },
  "include": [
    "src/**/*",
    "../schema/**/*",
    "node_modules/**/*",
    "../../node_modules/**/*"
  ]
}
